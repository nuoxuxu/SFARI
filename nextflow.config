includeConfig "./subworkflows/local/merge_and_collapse/nextflow.config"
includeConfig "./subworkflows/local/classify_and_count/nextflow.config"

params {
    outdir = "/scratch/nxu/SFARI/nextflow_results"
    input = "data"
    custom_config_version = "master"
    custom_config_base = "https://raw.githubusercontent.com/nf-core/configs/${params.custom_config_version}"
    show_hidden_params = false
    schema_ignore_params = ["params.custom_config_version", "params.custom_config_base", "params.show_hidden_params", "params.schema_ignore_params"]
    min_reads = 5
    min_n_sample = 2
    mzXMLfiles = "/scratch/s/shreejoy/nxu/SFARI/data/tc-1154/*.mzXML"
    polyA_site = "/scratch/s/shreejoy/nxu/SFARI/data/atlas.clusters.2.0.GRCh38.96.bed"
    refTSS = "/scratch/s/shreejoy/nxu/SFARI/data/refTSS_v3.3_human_coordinate.hg38.sorted.bed"
    annotation_gtf = "annotation_gtf"
    searchDB = "hybrid"
    comet_params = "/scratch/nxu/SFARI/data/comet.params"
    datadir = "/scratch/nxu/SFARI/data/"
    orf_prediction = "orfanage"
    flnc_bam = "/scratch/nxu/SFARI/data/long_read/LUO26876.20240514/*/outputs/flnc.bam"
    mapped_bam = "data/long_read/LUO26876.20240514/*/outputs/mapped.bam"
    riboseq_file = "/scratch/nxu/SFARI/data/riboseq/41593_2022_1164_MOESM4_ESM.xlsx"
    phyloP_bigwig = "/scratch/nxu/SFARI/data/cactus241way.phyloP.bw"
}

manifest {
    name = "SFARI_isoseq"
    description = "Nextflow pipeline for processing Iso-Seq data"
    version = "0.1.0"
    nextflowVersion = ">=23.04.1"
    homePage = "https://github.com/nuoxuxu/SFARI"
}

conda {
    enabled = true
}

apptainer {
    enabled = true
    autoMounts = true
}

